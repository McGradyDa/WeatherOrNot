                                                        <ListView.ItemContainerTransitions>
                                                            <TransitionCollection/>
                                                        </ListView.ItemContainerTransitions>
                                                    </ListView>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </AutoSuggestBox.Resources>
                <AutoSuggestBox.Style>
                    <StaticResource ResourceKey="AutoSuggestBoxStyle1"/>
                </AutoSuggestBox.Style>
